{# roles/vpn_manager/templates/openvpn_server.conf.j2 #}
port {{ openvpn_port | default(1194) }}
proto {{ openvpn_proto | default('udp') }}
dev {{ openvpn_dev | default('tun') }}
ca /etc/openvpn/ca.crt
cert /etc/openvpn/server.crt
key /etc/openvpn/server.key
dh /etc/openvpn/dh.pem
server {{ openvpn_server_net | default('10.8.0.0 255.255.255.0') }}
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS {{ dns_server | default('1.1.1.1') }}"
keepalive 10 120
tls-auth /etc/openvpn/ta.key 0
cipher AES-256-GCM
user nobody
group nogroup
persist-key
persist-tun
status /var/log/openvpn-status.log
verb 3
