# MWCCDC Custom Suricata Rules (e.g., SSH Brute-Force)
alert ssh $EXTERNAL_NET any -> $HOME_NET 22 (msg:"SSH Brute Force Attempt"; flow:to_server,established; content:"SSH"; threshold:type both, track by_src, count 5, seconds 60; sid:1000001; rev:1;)

# VPN Traffic Alert (OpenVPN)
alert udp $EXTERNAL_NET any -> $HOME_NET {{ openvpn_port | default(1194) }} (msg:"Potential VPN Probe"; content:"OPENVPN"; sid:1000002; rev:1;)