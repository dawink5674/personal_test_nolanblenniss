{# templates/openvpn_server.conf.j2 #}
port {{ openvpn_port }}
proto {{ openvpn_proto }}
dev {{ openvpn_dev }}
local {{ openvpn_bind_ip | default('0.0.0.0') }}
ca /etc/openvpn/ca.crt
cert /etc/openvpn/server.crt
key /etc/openvpn/server.key
dh /etc/openvpn/dh.pem
server {{ openvpn_server_net }}
push "redirect-gateway def1 bypass-dhcp"
push "route {{ vpn_internal_net }} 255.255.255.0"  {# Route to CCDC Linux LAN #}
push "dhcp-option DNS {{ dns_server }}"
keepalive 10 120
tls-auth /etc/openvpn/ta.key 0
cipher AES-256-GCM
user nobody
group nogroup
persist-key
persist-tun
status /var/log/openvpn-status.log
verb 3